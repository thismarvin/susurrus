{
  "name": "susurrus",
  "version": "0.1.0",
  "description": "a simple lightweight javascript library intended to help create highly performant visualizations for the web.",
  "main": "./dist/susurrus.js",
  "module": "./dist/susurrus.module.js",
  "scripts": {
    "predevbuild": "rimraf ./dev",
    "devbuild": "tsc -p ./configs/dev/tsconfig.json",
    "pretty": "prettier --use-tabs true --write src/**/*.ts",
    "lint": "eslint ./src/** --ext .ts",
    "prebuild": "rimraf ./build",
    "build": "tsc -p ./configs/build/tsconfig.json",
    "predist": "rimraf ./dist",
    "dist": "rollup -c ./rollup.config.js",
    "preoncommit": "lint-staged",
    "oncommit" : "npm run build",
    "postoncommit": "npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thismarvin/susurrus.git"
  },
  "keywords": [
    "WebGL"
  ],
  "author": "Marvin Valenzuela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thismarvin/susurrus/issues"
  },
  "homepage": "https://github.com/thismarvin/susurrus#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.6",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run oncommit"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,js}": "prettier --write"
  }
}
